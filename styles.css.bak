body {
	font-family: 'Trebuchet MS', sans-serif;
	margin: 0;
}

header {
	font-family: 'Trebuchet MS', sans-serif;
	padding: 30px;
	text-align: left;
	background: #000;
	color: white;
	font-size: 30px;
}

footer {
	font-family: 'Trebuchet MS', sans-serif;
	padding: 50px;
	text-align: center;
	background: #607274;
	color: white;
	font-size: 30px;
	bottom:0;
	position:relative;
	width:100%;
}
.container {
	width: 100%;
	height: 100vh;
	overflow-y: scroll;
	scroll-snap-type: y mandatory;
}
.slides {
	width: 100%;
	height: 100vh;
	display	: flex;
	align-items: center;
	justify-content: center;
	gap: 50px;
	scroll-snap-align: start;
	flex-wrap: wrap;
}
.slide1{
	background: #EFD8BA; 
	color: #2E2532;
}
.slide2{
	background: #2E2532;
	color: #9B8288;
}


h1 {
	font-size: 30px;
	font-family:'Trebuchet MS', sans-serif;
	font-weight:bold;
	text-align:center;
}

h2{
	display:block;
	font-family:'Trebuchet MS', sans-serif;
	font-weight:bold;
	text-align:left;

}

h3{
	display:block;
	font-family:'Trebuchet MS', sans-serif;
	font-weight:normal;
	text-align:left;
}
  
h4{
	font-size: 20px;
	display:block;
	font-family:'Trebuchet MS', sans-serif;
	font-weight:bold;
	text-align:left;
}	

img {
  /*border: 5px solid #2E2532;*/
  border-radius: 50%;
}

