body {
	font-family: Arial;
	margin: 0;
}

header {
	font-family: 'Trebuchet MS', sans-serif;
	padding: 100px;
	text-align: center;
	background: #607274;
	color: white;
	font-size: 30px;
}

footer {
	font-family: 'Trebuchet MS', sans-serif;
	padding: 50px;
	text-align: center;
	background: #607274;
	color: white;
	font-size: 30px;
	bottom:0;
	position:fixed;
	width:100%;
}

content {
	padding:20px;
}


* {
	box-sizing: border-box;
}

.column {
	float: left;
	width: 33.33%;
	padding: 10px;
	height: 350px;
}

.row:after {
	content: "";
	color: #FAEED1;
	display: table;
	clear: both;
}

container{
	padding: 10px;
	text-align: center;
}

.column2 {
  float: left;
  width: 50%;
  padding: 10px;
  height: 350px;
}

.row2:after {
  content: "";
  display: table;
  clear: both;
}